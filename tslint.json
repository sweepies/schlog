{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "ordered-imports": [
            true,
            {
                "grouped-imports": true
            }
        ],
        "semicolon": [
            true,
            "never"
        ],
        "max-line-length": [
            true,
            120
        ],
        "quotemark": true
    },
    "jsRules": {
        "ordered-imports": [
            true,
            {
                "grouped-imports": true
            }
        ],
        "semicolon": [
            true,
            "always"
        ],
        "max-line-length": [
            true,
            120
        ],
        "quotemark": true
    }
}